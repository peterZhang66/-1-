.title{height: 54rpx;line-height: 54rpx;padding:0 22rpx;border-bottom: 2rpx solid #ccc;display: flex;justify-content: space-between}
.bgBox{padding:0 22rpx 0;}
.goods{height: 250rpx;display: flex;align-items: center;border-bottom: 2rpx solid #ccc}
image{width: 192rpx;height: 192rpx;margin-right: 50rpx}
.num{height: 100rpx;display: flex;justify-content: space-between;align-items: center;font-size: 30rpx;border-bottom: 2rpx solid #ccc}
.col{flex-direction: column;align-items: flex-start}
input{width:680rpx;height:50rpx;border: 2rpx solid #ccc}
.form{height: 150rpx;display: flex;align-items: center}
.btn{display: flex;justify-content: space-around;}
.btn .btnItem{width: 120rpx;height: 50rpx;line-height: 50rpx;border-radius: 15rpx;font-size: 26rpx;border:2rpx solid #ccc;text-align: center;color: #ccc}
textarea{width:100%;height: 140rpx;border: 2rpx solid #000}
.btnBox{display: flex;justify-content: center;margin-top: 50rpx}
.btn{width: 130rpx;height: 60rpx;background: #169ada;font-size: 30rpx;line-height: 60rpx;color: #fff;border-radius: 10rpx}
/*收货人  */
.people{height: 90rpx;border-bottom: 2rpx solid #ccc;display: flex;justify-content: space-between;align-items: center}
.people .left{height: 100%;display: flex;flex-direction: column;justify-content: space-around;font-size: 12px;color: #a5a5a5}
.people .right{width: 120rpx;height: 45rpx;line-height: 45rpx;background: #169ada;border-radius: 10rpx;margin-right: 10rpx;text-align: center;color: #fff;font-size: 14px}
.li{height: 45rpx;line-height: 45rpx;font-size: 12px;color: #a5a5a5}
.copy{display: inline-block;width: 80rpx;height: 30rpx;margin-left: 20px;border: 2rpx solid #a5a5a5;line-height: 30rpx;text-align: center}
.table{width: 100%;border-top:2rpx solid #ccc;border-left:2rpx solid #ccc;font-size: 14px}
.tr{display: flex;height:50rpx;line-height: 50rpx}
.td-1,.td-2,.td-3,.td-4,.td-5{flex:1;border-bottom:2rpx solid #ccc;border-right:2rpx solid #ccc}
.td{display: flex;justify-content: center;align-items: center;font-size: 14px;color: #a5a5a5}
.bold{font-weight: bold;color: #7f7f7f}
.bigBox{height: 75rpx;line-height: 75rpx;text-align: center;border-left:1rpx solid #ccc;border-right:1rpx solid #ccc;width:100%}
.txt{height: 200rpx;display: flex;flex-direction: column;justify-content: space-around}




